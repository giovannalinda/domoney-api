{
  "compilerOptions": {
    "target": "esnext",                                  
    "module": "commonjs",   
    "outDir": "./dist",
    "rootDir": "./",                             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "paths": {
      "@/*": ["./src/*"]
    }                          
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}
